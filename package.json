{
  "name": "rectangle-packing-optimizer",
  "version": "1.0.0",
  "description": "Ứng dụng tối ưu sắp xếp hình chữ nhật với thuật toán 2D bin packing",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "electron-dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"cd client && npm run electron-dev\"",
    "server": "nodemon server/index.js",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "electron-pack": "cd client && npm run electron-pack",
    "electron": "cd client && npm run electron"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2",
    "modbus-serial": "^8.0.12",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3" 
  },
  "keywords": [
    "rectangle-packing",
    "2d-bin-packing",
    "optimization",
    "modbus",
    "plc"
  ]
}